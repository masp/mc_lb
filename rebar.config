{erl_opts, [debug_info]}.

{project_plugins, [erlfmt]}.

{erlfmt, [write]}.

{deps, [
    jsone,
    {uuid, {git, "https://github.com/okeuday/uuid", {branch, "master"}}}
]}.

{relx, [
    {release, {mc_lb, "0.1.0"}, [
        mc_lb,
        sasl
    ]},

    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},

    {dev_mode, true},
    {include_erts, false},

    {extended_start_script, true}
]}.

{profiles, [
    {prod, [
        {relx, [
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]}
]}.
